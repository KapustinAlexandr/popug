{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kafka": {
    "Producers": {
      "Default": {
        "BootstrapServers": "kafka:9092",
        "IsEnabled": true,
        "DisposeWaitMillisecond": 3000
      }
    },
    "Consumers": {
      "Default": {
        "BootstrapServers": "kafka:9092"
      },
      "AuthEvents": {
        "GroupId": "billing.api"
      },
      "TaskTrackerTaskStreaming": {
        "GroupId": "billing.api"
      },
      "TaskTrackerTaskAssigned": {
        "GroupId": "billing.api"
      },
      "TaskTrackerTaskCompleted": {
        "GroupId": "billing.api"
      }
    }
  }
}
